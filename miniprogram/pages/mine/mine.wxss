/* pages/mine/mine.wxss */
.mine-container {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: 120rpx;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 80rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: #fff;
}

.user-detail {
  margin-left: 30rpx;
  flex: 1;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.user-id {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 8rpx;
}

.login-tip {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* 菜单区域 */
.menu-section {
  margin: 30rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.favorites-icon {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.history-icon {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.feedback-icon {
  background: linear-gradient(135deg, #d299c2 0%, #fef9d7 100%);
}

.icon-text {
  font-size: 28rpx;
}

.menu-title {
  flex: 1;
  margin-left: 24rpx;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 36rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-section {
  margin: 60rpx 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #ff4d4f;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn::after {
  border: none;
}

/* 底部版权 */
.footer {
  padding: 40rpx;
  text-align: center;
}

.copyright {
  display: block;
  font-size: 22rpx;
  color: #999;
  line-height: 1.8;
}
