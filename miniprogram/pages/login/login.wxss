/* pages/login/login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 80rpx 40rpx 40rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.logo-icon {
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.logo-text {
  font-size: 60rpx;
  font-weight: bold;
  color: #667eea;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 40rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
}

/* 登录按钮区域 */
.login-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.login-btn {
  width: 100%;
  max-width: 600rpx;
  height: 96rpx;
  background: #fff;
  color: #667eea;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
  border: none;
}

.login-btn::after {
  border: none;
}

.login-btn.loading {
  opacity: 0.7;
}

.login-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 24rpx;
}

/* 底部说明 */
.footer {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding-bottom: 60rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.footer-link {
  font-size: 24rpx;
  color: #fff;
}
