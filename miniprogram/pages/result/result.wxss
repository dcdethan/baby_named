/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #888;
}

/* 八字卡片 */
.bazi-card {
  margin: 0 30rpx 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding: 0 30rpx;
}

.bazi-content {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.bazi-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.bazi-label {
  font-size: 24rpx;
  color: #888;
}

.bazi-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 名字列表 */
.names-container {
  padding: 0 30rpx;
}

.name-card {
  margin-bottom: 24rpx;
  transition: all 0.3s;
}

.name-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.name-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.name-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.pinyin-text {
  font-size: 26rpx;
  color: #888;
}

.wuxing-tag {
  display: inline-block;
  background: #f0f9ff;
  color: #0284c7;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.meaning-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部按钮 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 40rpx 30rpx 0;
}

.btn-secondary {
  flex: 1;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-secondary:active {
  background-color: #e5e5e5;
}

.btn-primary {
  flex: 1;
}
