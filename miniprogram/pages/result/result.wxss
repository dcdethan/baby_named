/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
  background: #f5f5f5;
}

.header {
  text-align: center;
  padding: 60rpx 0 40rpx;
  background: linear-gradient(180deg, #fff 0%, #f5f5f5 100%);
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #888;
}

/* 卡片通用样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

/* 八字卡片 */
.bazi-card {
  margin: 0 30rpx 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding: 0 30rpx;
}

.bazi-content {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.bazi-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.bazi-label {
  font-size: 24rpx;
  color: #888;
}

.bazi-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 候选单字区域 */
.chars-section {
  padding: 0 30rpx;
}

.chars-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.char-card {
  width: calc(33.33% - 14rpx);
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.char-card.expanded {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.char-card.expanded .char-text,
.char-card.expanded .char-pinyin,
.char-card.expanded .char-wuxing {
  color: #fff;
}

.char-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.char-text {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
}

.char-pinyin {
  font-size: 24rpx;
  color: #888;
}

.char-wuxing {
  display: inline-block;
  background: #f0f9ff;
  color: #0284c7;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  margin-top: 8rpx;
}

.char-card.expanded .char-wuxing {
  background: rgba(255,255,255,0.2);
  color: #fff;
}

/* 展开的详情 */
.char-detail {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255,255,255,0.2);
}

.detail-name {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.full-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
}

.full-pinyin {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
}

.detail-analysis {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  line-height: 1.6;
}

/* 底部按钮 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 40rpx 30rpx 0;
}

.btn-secondary {
  flex: 1;
  background-color: #fff;
  color: #333;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}

.btn-primary {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-primary:active {
  opacity: 0.9;
}
