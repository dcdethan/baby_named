/* pages/home/home.wxss */
.home-container {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 12rpx;
}

/* 功能卡片区域 */
.feature-grid {
  padding: 0 30rpx;
  margin-top: -40rpx;
}

.feature-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.feature-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.naming-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.analysis-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.library-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.icon-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.feature-info {
  flex: 1;
  margin-left: 30rpx;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.feature-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.feature-arrow {
  flex-shrink: 0;
}

.arrow {
  font-size: 48rpx;
  color: #ccc;
}

/* 使用说明 */
.tips-section {
  margin: 40rpx 30rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.tips-list {
  padding: 0;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-num {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
