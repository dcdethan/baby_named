/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #888;
}

.form-container {
  padding: 0 30rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
}

.optional {
  color: #999;
  font-size: 26rpx;
  font-weight: normal;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.picker {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  color: #333;
}

.radio-group-vertical {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.radio-item-vertical {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.radio-item-vertical radio {
  margin-top: 4rpx;
}

.radio-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.radio-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.radio-desc {
  font-size: 26rpx;
  color: #888;
}

.submit-container {
  padding: 40rpx 30rpx 0;
}
