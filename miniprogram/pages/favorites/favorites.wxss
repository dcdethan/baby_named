/* pages/favorites/favorites.wxss */
.favorites-container {
  min-height: 100vh;
  background: #f5f6fa;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #667eea;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
}

.tab-count {
  margin-left: 8rpx;
  font-size: 24rpx;
}

/* 列表区域 */
.list-section {
  padding: 30rpx;
}

.favorite-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.card-content {
  flex: 1;
}

.card-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-pinyin {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.card-score {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #667eea;
  margin-top: 12rpx;
}

.card-detail {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-actions {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.delete-btn {
  padding: 16rpx 24rpx;
  background: #fff0f0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #ff4d4f;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 30rpx;
  color: #999;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #bbb;
  margin-top: 12rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #999;
}
