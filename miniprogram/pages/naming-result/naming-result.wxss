/* pages/naming-result/naming-result.wxss */
.result-container {
  min-height: 100vh;
  background: #f5f6fa;
  padding: 30rpx;
  padding-bottom: 180rpx;
}

/* 八字信息卡片 */
.bazi-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.bazi-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.bazi-item {
  text-align: center;
}

.bazi-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.bazi-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
}

.bazi-result {
  margin-bottom: 16rpx;
}

.result-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 26rpx;
  border-radius: 20rpx;
}

.bazi-explanation {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 姓名方案 */
.names-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.name-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.name-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.name-main {
  flex: 1;
}

.full-name {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

.pinyin {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}

.favorite-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.star {
  font-size: 48rpx;
  color: #ddd;
}

.favorite-btn.active .star {
  color: #ffc107;
}

.name-score {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 12rpx;
}

.score-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 16rpx;
}

.score-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
}

.score-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.chars-info {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.char-tag {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f6fa;
  border-radius: 12rpx;
}

.char-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.char-meta {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.name-analysis {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.action-btn::after {
  border: none;
}

.refresh-btn {
  background: #f5f6fa;
  color: #666;
}

.refresh-btn.loading {
  opacity: 0.7;
}

.style-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

/* 风格选择器 */
.style-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 100;
}

.style-picker-mask.show {
  opacity: 1;
  visibility: visible;
}

.style-picker {
  width: 100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s;
}

.style-picker-mask.show .style-picker {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.style-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.style-option {
  padding: 32rpx;
  background: #f5f6fa;
  border-radius: 16rpx;
  text-align: center;
}

.style-option:active {
  background: #e8e8e8;
}

.style-label {
  font-size: 32rpx;
  color: #333;
}
