/* pages/analysis/analysis.wxss */
.analysis-container {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: 180rpx;
}

/* 输入区域 */
.input-section {
  padding: 30rpx;
  background: #fff;
}

.input-wrapper {
  display: flex;
  gap: 20rpx;
}

.name-input {
  flex: 1;
  height: 88rpx;
  background: #f5f6fa;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
}

.name-input::placeholder {
  color: #bbb;
}

.analyze-btn {
  width: 200rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  flex-shrink: 0;
}

.analyze-btn::after {
  border: none;
}

.analyze-btn.loading {
  opacity: 0.7;
}

/* 结果区域 */
.result-section {
  padding: 30rpx;
}

.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 字形结构 */
.chars-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.char-item {
  flex: 1;
  min-width: 150rpx;
  padding: 24rpx;
  background: #f5f6fa;
  border-radius: 16rpx;
  text-align: center;
}

.char-text {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.char-detail {
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.detail-item {
  font-size: 22rpx;
  color: #999;
}

/* 寓意解读 */
.meaning-content {
  font-size: 28rpx;
  line-height: 1.8;
}

.interpretation {
  display: block;
  color: #333;
  margin-bottom: 20rpx;
}

.origin, .cultural {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f5f6fa;
  border-radius: 12rpx;
}

.origin-label, .cultural-label {
  font-weight: 500;
  color: #667eea;
}

.origin-text, .cultural-text {
  color: #666;
}

/* 建议列表 */
.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.suggestion-num {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 30rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 36rpx;
}

.favorite-btn {
  background: #f5f6fa;
  color: #666;
}

.favorite-btn.active {
  background: #fff3cd;
  color: #f5a623;
}

.share-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}
